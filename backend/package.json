    "build:ts:watch": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "production": "forever start app.js",
    "watch": "concurrently -k -p '[{name}]' -n 'Typescript,Node' -c 'cyan.bold,green.bold' 'npm run build:ts:watch' 'npm run dev'",
